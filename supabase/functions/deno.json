{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": false
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "importMap": "./import_map.json",
  "tasks": {
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "test": "deno test"
  }
}
